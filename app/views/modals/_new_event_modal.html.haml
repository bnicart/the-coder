#new-event-modal.modal.fade{"aria-labelledby" => "New Event", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title
          New Event
      .modal-body
        %form
          .form-group
            %label Date
            %input.form-control{:placeholder => "Date", :type => "text", :name => "new-event-date", :readonly => true}/
          .form-group
            %label About
            %input.form-control{:placeholder => "What is your event about?", :type => "text", :name => "new-event-about"}/
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Save
