#new-product-modal.modal.fade{"aria-labelledby" => "New Product", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title
          New Product
      .modal-body
        .form-group
          %label Title
          %input.form-control{:placeholder => "Event title", :type => "text", :name => "title"}/
        .form-group
          %label Description
          %textarea.form-control{:placeholder => "Describe your event", :type => "text", :name => "description"}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary.new-product-save{:type => "button", "data-url" => usana_products_path, "data-method" => "POST"} Save
